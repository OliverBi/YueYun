	<bean id="TbAlbumService" class="com.yueyun.service.TbAlbumService">
		<property name="tbAlbumDAO">
			<ref bean="TbAlbumDAO" />
		</property>
		<property name="tbTrackDAO">
			<ref bean="TbTrackDAO" />
		</property>
		<property name="tbArtistService">
			<ref bean="TbArtistService" />
		</property>
